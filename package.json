{
	"name": "preact-fetching",
	"version": "0.1.1",
	"description": "Preact hooks for asynchronous data fetching",
	"main": "build/index.js",
	"module": "build/index.esm.js",
	"exports": {
		".": {
			"import": "./build/index.esm.js",
			"require": "./build/index.js"
		}
	},
	"typings": "build/index.d.ts",
	"sideEffects": false,
	"files": [
		"build"
	],
	"scripts": {
		"clean": "rimraf build",
		"compile:cjs": "esbuild src/index.js --outfile=build/index.js --format=cjs",
		"compile:esm": "esbuild src/index.js --outfile=build/index.esm.js --format=esm",
		"compile": "run-p compile:*",
		"minify:cjs": "esbuild build/index.js --minify --outfile=build/index.min.js --format=cjs",
		"minify:esm": "esbuild build/index.esm.js --minify --outfile=build/index.esm.min.js --format=esm",
		"minify": "run-p minify:*",
		"compile-minify": "run-s compile minify",
		"prebuild": "npm run clean",
		"build": "run-p typecheck compile-minify",
		"typecheck": "tsc",
		"lint": "eslint src",
		"unit-test": "node --import=esbuild-esm-loader/register --test",
		"test": "run-p typecheck lint unit-test",
		"prepublishOnly": "run-p test build"
	},
	"author": {
		"name": "Andrew Duthie",
		"email": "andrew@andrewduthie.com",
		"url": "https://andrewduthie.com"
	},
	"homepage": "https://github.com/aduth/preact-fetching",
	"repository": {
		"type": "git",
		"url": "https://github.com/aduth/preact-fetching.git"
	},
	"bugs": {
		"url": "https://github.com/aduth/preact-fetching/issues"
	},
	"license": "MIT",
	"keywords": [
		"preact",
		"async",
		"fetch"
	],
	"devDependencies": {
		"@aduth/eslint-config": "^4.4.1",
		"@happy-dom/global-registrator": "^13.7.1",
		"@testing-library/preact": "^3.2.3",
		"@types/node": "^20.11.25",
		"@types/sinon": "^17.0.3",
		"esbuild": "^0.20.1",
		"esbuild-esm-loader": "^0.3.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"npm-run-all": "^4.1.5",
		"preact": "^10.19.6",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.5",
		"sinon": "^17.0.1",
		"typescript": "^5.4.2"
	},
	"peerDependencies": {
		"preact": ">=10"
	}
}
